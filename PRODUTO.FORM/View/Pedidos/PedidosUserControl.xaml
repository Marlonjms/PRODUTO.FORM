<UserControl x:Class="PRODUTO.FORM.View.Pedidos.PedidosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="#F9F9F9" Margin="20">
        <Border CornerRadius="10" Background="White" Padding="20" BorderBrush="#DDD" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch">

                <!-- Título -->
                <TextBlock Text="Cadastro de Pedido" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,10"/>

                <!-- Seleção de Pessoa -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Cliente:" Width="120" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbClientes" Width="300" Height="28">
                        <ComboBoxItem Content="Selecione um cliente..." IsSelected="True" IsEnabled="False"/>
                    </ComboBox>
                </StackPanel>

                <!-- Adição de Produtos -->
                <TextBlock Text="Produtos" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <DataGrid x:Name="dgProdutos"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="True"
                          CanUserDeleteRows="True"
                          HeadersVisibility="Column"
                          Height="200" Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="100"/>
                        <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>
                        <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                        <DataGridTextColumn Header="Preço Unitário" Binding="{Binding PrecoUnitario}" Width="120"/>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="120" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Valor Total -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock Text="Valor Total: " FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtValorTotal" Text="R$ 0,00" FontSize="16" 
                               FontWeight="Bold" Foreground="DarkGreen" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Forma de Pagamento -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="Forma de Pagamento:" Width="150" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbPagamento" Width="200" Height="28">
                        <ComboBoxItem Content="Dinheiro"/>
                        <ComboBoxItem Content="Cartão de Crédito"/>
                        <ComboBoxItem Content="Cartão de Débito"/>
                        <ComboBoxItem Content="Pix"/>
                    </ComboBox>
                </StackPanel>

                <!-- Botão Finalizar -->
                <Button x:Name="btnFinalizar" Content="Finalizar Pedido" 
                        Width="180" Height="40" 
                        Background="#4CAF50" Foreground="White" 
                        FontWeight="Bold" Margin="0,20,0,0"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
