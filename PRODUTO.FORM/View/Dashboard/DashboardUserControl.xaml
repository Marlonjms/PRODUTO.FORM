<UserControl x:Class="PRODUTO.FORM.View.Dashboard.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- Estilo de Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo de Botão Ações Rápidas -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f5f5f5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="#fafafa" Margin="20">

            <!-- ================= CABEÇALHO ================= -->
            <StackPanel Margin="8,0,0,20">
                <TextBlock Text="Dashboard" FontSize="22" FontWeight="Bold"/>
                <TextBlock Text="Visão geral do sistema" Foreground="Gray" FontSize="14"/>
            </StackPanel>

            <!-- ================= CARDS DE RESUMO ================= -->
            <UniformGrid Columns="4">
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="👤 Pessoas Cadastradas" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="0" FontSize="26" FontWeight="Bold" Foreground="#1c805b" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📦 Produtos Cadastrados" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="0" FontSize="26" FontWeight="Bold" Foreground="#1c805b" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🛒 Total de Pedidos" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="0" FontSize="26" FontWeight="Bold" Foreground="#1c805b" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📈 Valor Total em Vendas" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="R$ 0,00" FontSize="26" FontWeight="Bold" Foreground="#1c805b" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- ================= STATUS DE PEDIDOS ================= -->
            <UniformGrid Columns="2" Margin="0,20,0,0">
                <!-- Pedidos Pendentes -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Título + Ícone -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="⏱" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Pedidos Pendentes" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Detalhes -->
                        <StackPanel Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Quantidade:" Width="100"/>
                                <TextBlock Text="0 pedidos" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Valor Total:" Width="100"/>
                                <TextBlock Text="R$ 0,00" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Pedidos Pagos -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Título + Ícone -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="✔" FontSize="16" Margin="0,0,8,0" Foreground="#2e7d32" VerticalAlignment="Center"/>
                            <TextBlock Text="Pedidos Pagos" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Detalhes -->
                        <StackPanel Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Quantidade:" Width="100"/>
                                <TextBlock Text="0 pedidos" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Valor Recebido:" Width="100"/>
                                <TextBlock Text="R$ 0,00" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- ================= AÇÕES RÁPIDAS ================= -->
            <TextBlock Text="Ações Rápidas" FontSize="16" FontWeight="Bold" Margin="8,20,0,10"/>
            <UniformGrid Columns="3">
                <Button Style="{StaticResource ActionButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="👤" FontSize="22" Margin="0,0,8,0"/>
                        <StackPanel>
                            <TextBlock Text="Cadastrar Pessoa" FontWeight="Bold"/>
                            <TextBlock Text="Adicionar nova pessoa ao sistema" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ActionButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📦" FontSize="22" Margin="0,0,8,0"/>
                        <StackPanel>
                            <TextBlock Text="Cadastrar Produto" FontWeight="Bold"/>
                            <TextBlock Text="Adicionar novo produto ao catálogo" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ActionButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🛒" FontSize="22" Margin="0,0,8,0"/>
                        <StackPanel>
                            <TextBlock Text="Novo Pedido" FontWeight="Bold"/>
                            <TextBlock Text="Criar pedido para um cliente" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
